@model IEnumerable<VerticalLiftBSIAssignment.Models.Product>

@{
    ViewBag.Title = "List Product";
}

<h2>List Product</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
     
        <td>
            @Html.ActionLink("Detail", "EditProduct", new { id = item.id }) |
            @Html.ActionLink("View", "ViewProduct", new { id = item.id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "CreateProduct")
</p>
